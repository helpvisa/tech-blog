<!-- display data for a given post on home screen -->
<article>
    <!-- post title -->
    <div>
        <a href="/post/{{id}}">{{title}}</a>
        <p>posted by {{user.username}} on {{created_at}}</p>
    </div>
    <!-- post text -->
    <div>
        <p>{{text}}</p>
    </div>
    <!-- post info -->
    <div>
        <a href="/post/{{id}}">{{comments.length}} comments</a>
    </div>
</article>