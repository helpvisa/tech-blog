<!-- display data for a given post on home screen -->
<article>
    <!-- post title -->
    <div>
        <h3><a href="/post/{{id}}">{{title}}</a></h3>
        <p>posted by <span class="font-italic">{{user.username}}</span> on <span class="font-weight-bold">{{formatDate created_at}}</span></p>
    </div>
    <!-- post info -->
    <div>
        <a class="font-italic" href="/post/{{id}}">{{comments.length}} {{formatPlural "comment" comments.length}}</a>
    </div>
</article>