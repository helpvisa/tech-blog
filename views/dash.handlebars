<!-- dashboard layout -->
<section>
    <button id="create-post">CREATE NEW BLOG POST</button>
</section>

<!-- display users own posts -->
{{#if posts.length}}
<section>
    <h3>Your Previous Posts</h3>

    <div>
        {{#each posts as |post|}}
        <div>
            {{> dash-post post}}
            <a href="/dash/edit/{{post.id}}">EDIT POST</a>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

<!-- load scripts -->
<script src="/javascript/dash.js"></script>